<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./parts/head.ejs %>
</head>
<body>
  <main class="agent-signup">
    <div class="login-box">
      <div  class="panel-heading text-center">
          <h4>Sign Up</h4>
      </div>
        
      <form class="signup-form" action="/agent/api/v1/signup" method="post">
        <p id="error1"></p>
        <div class="input-block">
          <p>Username:</p>
          <input id="agent_name" class="input-box" type="text" name="agent_name" placeholder="Username" autofocus autocomplete="off" required/>
        </div>
        <div class="input-block">
          <p>Email:</p>
          <input id="agent_email" class="input-box" type="email" name="agent_email" placeholder="Email" autocomplete="off" required/>
        </div>
        <div class="input-block">
          <p>Phone Number:</p>
          <input id="phone_number" class="input-box" type="text" name="phone_number" placeholder="Phone Number" required/>
        </div>
        <div class="input-block">
          <p>Password:</p>
          <input id="password" class="input-box" type="text" name="password" placeholder="Password" required/>
        </div>
       
        <br>
        <button class="btn btn-primary btn-block btn-lg" type="submit" name="submit">Signup</button><br>
       
      </form>
    </div>
  </main>

  <% include ./parts/footer.ejs %>

  <script src="/js/agentscript.js"></script>
</body>
</html>
